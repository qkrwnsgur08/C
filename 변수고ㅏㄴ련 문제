#include<stdio.h>

int main()
{
	int a , b, c;
	printf("국어 점수를 입력하시오. (0 제외)\n");
	scanf("%d ", &a);
	printf("영어 점수를 입력하시오. (0 제외)\n");
	scanf("%d ", &b);
	printf("수학 점수를 입력하시오. (0 제외)\n");
	scanf("%d ", &c);
	printf("세 과목의 합 : %d\n",a + b + c);
	printf("세 과목의 평균 :%d\n", (a + b + c) / 3);
	return 0;
}
